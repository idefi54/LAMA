<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Views.CPDetailsEditView"
             xmlns:forms="clr-namespace:LAMA.Forms">

    <ContentPage.ToolbarItems>
        <forms:BindableToolbarItem Text="Zrušit" Command="{Binding CancelCommand}"/>
        <forms:BindableToolbarItem Text="Uložit" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
    
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15" >

                <Label Text="Jméno"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End" IsVisible="{Binding CanChangeCPs}"/>
                <Entry Text="{Binding Name}" Placeholder="Jméno" FontSize="Medium" IsVisible="{Binding CanChangeCPs}"/>

                <Label Text="Přezdívka"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End" IsVisible="{Binding CanChangeCPs}"/>
                <Entry Text="{Binding Nick}" Placeholder="Přezdívka" FontSize="Medium" IsVisible="{Binding CanChangeCPs}" IsReadOnly="True"/>

                <Label Text="Role"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End" IsVisible="{Binding CanChangeCPs}"/>
                <Entry Text="{Binding Roles}" FontSize="Medium" IsVisible="{Binding CanChangeCPs}"/>
                
                <Label Text="Telefon"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End" IsVisible="{Binding CanChangeCPs}"/>
                <Entry Text="{Binding Phone}" FontSize="Medium" IsVisible="{Binding CanChangeCPs}"/>

                <Label Text="Facebook"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End" IsVisible="{Binding CanChangeCPs}"/>
                <Entry Text="{Binding Facebook}" FontSize="Medium" IsVisible="{Binding CanChangeCPs}"/>

                <Label Text="Discord"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End" IsVisible="{Binding CanChangeCPs}"/>
                <Entry Text="{Binding Discord}" FontSize="Medium" IsVisible="{Binding CanChangeCPs}"/>

                <Label Text="Poznámky"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End" IsVisible="{Binding CanChangeCPs}"/>
                <Editor Text="{Binding Notes}" AutoSize="TextChanges" Margin="0" FontSize="Medium" IsVisible="{Binding CanChangeCPs}"/>


                <ListView x:Name="PermissionList" ItemsSource="{Binding PermissionList}" SelectionMode="None" Margin="5,5,5,0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="5" Margin="5" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding Name}" Grid.Column="0"/>
                                    <CheckBox Grid.Column="1" IsChecked="{Binding Checked}" IsEnabled="{Binding CanChange}"/>

                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>