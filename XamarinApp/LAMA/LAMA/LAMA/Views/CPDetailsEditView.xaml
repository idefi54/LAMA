<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Views.CPDetailsEditView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15" >

                <Entry Text="{Binding Name}" Placeholder="Jméno" FontSize="Medium" />


                <Entry Text="{Binding Nick}" Placeholder="Přezdívka" FontSize="Medium" />



                <Label Text="Role"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Entry Text="{Binding Roles}" FontSize="Medium" />
                
                <Label Text="Telefon"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Entry Text="{Binding Phone}" FontSize="Medium" />

                <Label Text="Facebook"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Entry Text="{Binding Facebook}" FontSize="Medium" />

                <Label Text="Discord"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Entry Text="{Binding Discord}" FontSize="Medium" />

                <Label Text="Poznámky"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Entry Text="{Binding Notes}" FontSize="Medium" />


                <Picker Title="Pravomoc" ItemsSource="{Binding AddablePermissions}" SelectedIndex="{Binding PermissionToAdd}"  HorizontalOptions="Start"/>
                <Button Text="Přidat" Command="{Binding AddPermissionCommand}" HorizontalOptions="FillAndExpand"></Button>

                <Picker Title="Pravomoc" ItemsSource="{Binding CurrentPermissions}" SelectedIndex="{Binding PermissionToRemove}"  HorizontalOptions="Start"/>
                <Button Text="Odebrat" Command="{Binding RemovePermissionCommand}" HorizontalOptions="FillAndExpand"></Button>


                <Button Text="Uložit" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>