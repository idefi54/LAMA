<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Views.CreateInventoryItemView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15" >
                <Label Text="Název předmětu"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Entry Text="{Binding Name}" Placeholder="Název" FontSize="Medium" />
                
                <Label Text="Popis předmětu"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Entry Text="{Binding Description}" Placeholder="Popis" FontSize="Medium" />

                <Label Text="Na skladě"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Entry Text="{Binding Free}" Placeholder="0" FontSize="Medium" />

                <StackLayout Orientation="Horizontal">
                    <Button Text="Zpět" Command="{Binding CancelCommand}" HorizontalOptions="FillAndExpand"></Button>
                    <Button Text="Vytvořit" Command="{Binding CreateCommand}" HorizontalOptions="FillAndExpand"></Button>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>