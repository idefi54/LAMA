<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Views.EncyclopedyRecordView">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Přidat Stránku" Command="{Binding AddRecordCommand}"/>
        <ToolbarItem Text="Upravit" Command="{Binding Edit}"/>
        <ToolbarItem Text="Zpět" Command="{Binding Return}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15" >
                <Label Text="{Binding Name}"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Label Text="{Binding TLDR}"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                <Label Text="{Binding Text}"
					   HorizontalTextAlignment="Start"
					   VerticalTextAlignment="End"/>
                


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>