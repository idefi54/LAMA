<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LAMA.Views.CreateEncyclopedyCategoryView">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Uložit" Command="{Binding Create}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>

            <Label Text="Jméno"/>
            <Entry Text="{Binding Name}" Placeholder="Název" FontSize="Medium" />
            <Label Text="Popis"/>
            <Entry Text="{Binding Description}" Placeholder="Popis" FontSize="Medium" />




        </StackLayout>
    </ContentPage.Content>
</ContentPage>