<Application x:Class="LAMA.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LAMA.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Color x:Key="Primary">#2196F3</Color>
        <SolidColorBrush x:Key="WindowBackgroundColor" Color="White" />
        <SolidColorBrush x:Key="AccentColor" Color="{StaticResource Primary}" />

        <!-- Default Command Bar Color -->
        <SolidColorBrush x:Key="CommandBarBackgroundColor" Color="{StaticResource Primary}" />
        <SolidColorBrush x:Key="CommandBarTextColor" Color="White" />

        <!-- Default Title Bar Color -->
        <SolidColorBrush x:Key="DefaultTitleBarBackgroundColor" Color="{StaticResource Primary}" />
        <SolidColorBrush x:Key="DefaultTitleBarTextColor" Color="White" />

        <!-- Default Tabbed Bar Color -->
        <SolidColorBrush x:Key="DefaultTabbedBarBackgroundColor" Color="{StaticResource Primary}" />
        <SolidColorBrush x:Key="DefaultTabbedBarTextColor" Color="White" />
    </Application.Resources>
</Application>
